<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/greens</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/switch_color</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">

        <item name="colorControlActivated">#034b44</item>


        <item name="colorSwitchThumbNormal">#37937c</item>


        <item name="android:colorForeground">#f4f5f2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
